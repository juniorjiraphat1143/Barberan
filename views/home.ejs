<style>

form {border: 0px solid #f1f1f1;}

input[type=text],textarea {
  width: 100%;
  padding: 12px;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
  margin-top: 6px;
  margin-bottom: 16px;
  resize: vertical;
}
body {
  font-family: Arial;
  padding: 20px;
  background: #f1f1f1;
}

/* Header/Blog Title */
.header {
  padding: 30px;
  font-size: 40px;
  text-align: center;
  background: white;
}

/* Create two unequal columns that floats next to each other */
/* Left column */
.rightcolumn {   
  float: left;
  width: 70%;
  margin-left: 3%;
}

/* Right column */
.leftcolumn {
  float: left;
  width: 22%;
  margin-left: 3%;
}


/* Add a card effect for articles */
.card {
   background-color: white;
   padding: 20px;
   padding-bottom: 80px;
   margin-top: 20px;
   border-radius: 1em;
}




/* Clear floats after the columns */
.row:after {
  content: "";
  display: table;
  clear: both;
}

/* Footer */
.accordion,.button {
  background-color: rgb(238, 238, 238);
  cursor: pointer;
  padding: 18px;
  width: 100%;
  border: none;
  text-align: left;
  outline: none;
  font-size: 15px;
  transition: 0.4s;
  text-align: center;
  border-radius: 1em;

}

.active, .accordion:hover,.active,.button:hover {
  background-color: rgb(218, 218, 218);
}

.panel {
  padding: 0 18px;
  display: none;
  background-color: white;
  overflow: hidden;
}
.accordion:after,.button:after {
  font-size: 13px;
  color: #777;
  float: right;
  margin-left: 5px;
}
.inline {
     display: inline-block;
}

/* Responsive layout - when the screen is less than 800px wide, make the two columns stack on top of each other instead of next to each other */
@media screen and (max-width: 800px) {
  .leftcolumn, .rightcolumn {   
    width: 100%;
    padding: 0;
  }
}
</style>
